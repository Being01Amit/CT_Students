<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BackGroundgray"
    tools:context=".ui.Home.Home">


    <ImageView
        android:layout_width="240dp"
        android:layout_height="180dp"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="-30dp"
        android:src="@drawable/home_logo_ct" />

    <View
        android:id="@+id/tlThinLine"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="280dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/black"
        android:backgroundTintMode="screen" />

    <TextView
        android:id="@+id/txtAttendence"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_below="@+id/tlThinLine"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/charyRed"
        android:fontFamily="@font/sans_font"
        android:gravity="bottom"
        android:padding="20dp"
        android:paddingBottom="10dp"
        android:text="@string/attendance"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:autoSizeMaxTextSize="80sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/txtAssignments"
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_below="@+id/tlThinLine"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/DarkBlue"
        android:fontFamily="@font/sans_font"
        android:gravity="bottom"
        android:padding="20dp"
        android:paddingBottom="10dp"
        android:text="@string/assignments"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:autoSizeMaxTextSize="80sp"
        android:textStyle="bold"
        />


    <TextView
        android:id="@+id/txtNotes"
        android:layout_width="180dp"
        android:layout_height="280dp"
        android:layout_below="@+id/txtAttendence"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/sans_font"
        android:gravity="bottom"
        android:padding="20dp"
        android:paddingBottom="10dp"
        android:text="@string/notes"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:autoSizeMaxTextSize="80sp"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/txtCGPA"
        android:layout_width="180dp"
        android:layout_height="160dp"
        android:layout_below="@+id/txtAssignments"
        android:layout_alignParentRight="true"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/round_corner"
        android:backgroundTint="@color/black"
        android:fontFamily="@font/sans_font"
        android:gravity="bottom"
        android:padding="20dp"
        android:paddingBottom="10dp"
        android:text="@string/cgpa"
        android:autoSizeMaxTextSize="80sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        />


</RelativeLayout>